@charset "UTF-8";

@font-face {
  font-family: 'fontello';
  src: url('<%= asset_path('fontello.eot') %>');
  src: url('<%= asset_path('fontello.eot?#iefix') %>') format('embedded-opentype'), url('<%= asset_path('fontello.woff') %>') format('woff'), url('<%= asset_path('fontello.ttf') %>') format('truetype'), url('<%= asset_path('fontello.svg#fontello') %>') format('svg');
  font-weight: normal;
  font-style: normal;
}
[class^="icon-"]:before,
[class*=" icon-"]:before {
  font-family: 'fontello';
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  width: 1.5em;
  margin-right: 0.2em;
  text-align: center;
  opacity: 0.7;
/* Uncomment for 3D effect */
 text-shadow: 1px 1px 1px rgba(127, 127, 127, 0.3); 
/* fix buttons height */
  line-height: 1em;
/* you can be more comfortable with increased icons size */
/* font-size: 120%; */
}

.icon-mail:before { content: '\2709'; } /* '✉' */
.icon-mail-1:before { content: '\e800'; } /* '' */
.icon-info-circle:before { content: '\e705'; } /* '' */
.icon-twitter-bird:before { content: '\f303'; } /* '' */
.icon-linkedin:before { content: '\f31a'; } /* '' */
.icon-book:before { content: '\1f4d5'; } /* '\1f4d5' */
.icon-book-open:before { content: '\1f4d6'; } /* '\1f4d6' */